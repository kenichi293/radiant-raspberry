---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout title="Pricing" currentLang="en">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Pricing Plans</h1>

    <!-- Rest Section -->
    <div class="price-section mb-10">
      <div class="bg-blue-600 text-white py-3 px-4 rounded-t-lg">
        <h2 class="text-xl font-bold">Rest</h2>
      </div>
      <div class="bg-white rounded-b-lg shadow-md p-6">
        <div class="price-card bg-gray-50 p-4 rounded-lg mb-4">
          <div class="font-bold text-lg border-b pb-2 mb-3 text-blue-800">[All Days]</div>
          <div class="mb-4">
            <p class="font-medium">◇ Max 2 hours between 5:00–1:00 (next day)</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥4,000–¥6,900</p>
          </div>
          <div class="mb-2">
            <p class="font-medium">◇ Max 6 hours between 5:00–1:00 (next day)</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥5,100–¥7,900</p>
          </div>
          <p class="text-sm text-gray-600 mt-3">* Prices include tax</p>
        </div>
      </div>
    </div>

    <!-- Service Time -->
    <div class="price-section mb-10">
      <div class="bg-green-600 text-white py-3 px-4 rounded-t-lg">
        <h2 class="text-xl font-bold">Service Time (Free Time)</h2>
      </div>
      <div class="bg-white rounded-b-lg shadow-md p-6">
        <div class="price-card bg-gray-50 p-4 rounded-lg mb-4">
          <div class="font-bold text-lg border-b pb-2 mb-3 text-green-800">[Mon–Fri]</div>
          <div class="mb-4">
            <p class="font-medium">◇ Max 13 hours between 5:00–18:00</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥5,100–¥7,900</p>
          </div>
        </div>
        <div class="price-card bg-gray-50 p-4 rounded-lg">
          <div class="font-bold text-lg border-b pb-2 mb-3 text-green-800">[Sat, Sun & Holidays]</div>
          <div class="mb-2">
            <p class="font-medium">◇ Max 10 hours between 5:00–15:00</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥5,100–¥7,900</p>
          </div>
          <p class="text-sm text-gray-600 mt-3">* Prices include tax</p>
        </div>
      </div>
    </div>

    <!-- Stay -->
    <div class="price-section mb-10">
      <div class="bg-purple-600 text-white py-3 px-4 rounded-t-lg">
        <h2 class="text-xl font-bold">Stay</h2>
      </div>
      <div class="bg-white rounded-b-lg shadow-md p-6">
        <div class="price-card bg-gray-50 p-4 rounded-lg mb-4">
          <div class="font-bold text-lg border-b pb-2 mb-3 text-purple-800">[Sun–Fri & Holidays]</div>
          <div class="mb-4">
            <p class="font-medium">◇ Max 18 hours between 17:00–11:00 (next day)</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥7,700–¥11,000</p>
          </div>
        </div>
        <div class="price-card bg-gray-50 p-4 rounded-lg">
          <div class="font-bold text-lg border-b pb-2 mb-3 text-purple-800">[Sat & Holiday Eves]</div>
          <div class="mb-2">
            <p class="font-medium">◇ Max 11 hours between 18:00–10:00 (next day)</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥7,700–¥11,000</p>
          </div>
          <p class="text-sm text-gray-600 mt-3">* Prices include tax</p>
        </div>
      </div>
    </div>

    <!-- Midnight -->
    <div class="price-section mb-10">
      <div class="bg-indigo-600 text-white py-3 px-4 rounded-t-lg">
        <h2 class="text-xl font-bold">Midnight</h2>
      </div>
      <div class="bg-white rounded-b-lg shadow-md p-6">
        <div class="price-card bg-gray-50 p-4 rounded-lg">
          <div class="font-bold text-lg border-b pb-2 mb-3 text-indigo-800">[All Days]</div>
          <div class="mb-2">
            <p class="font-medium">◇ Max 11 hours between 1:00–12:00</p>
            <p class="text-xl font-bold text-red-600 ml-4 mt-1">¥7,700–¥11,000</p>
          </div>
          <p class="text-sm text-gray-600 mt-3">* Prices include tax</p>
        </div>
      </div>
    </div>

    <div class="text-center text-gray-600 text-sm mt-8 mb-4">
      <p>Prices may vary depending on the season or room type.</p>
      <p>Please contact us for details.</p>
    </div>

    <!-- Back to Home Button -->
    <div class="text-center mt-8">
      <a href="/en/" class="inline-block px-6 py-3 bg-pink-300 text-white font-semibold rounded hover:bg-pink-400 transition">
        Back to Home
      </a>
    </div>
  </main>
</MainLayout>
